
## 3. setup.py
```python
from setuptools import setup, find_packages

with open("README.md", "r", encoding="utf-8") as fh:
    long_description = fh.read()

with open("requirements.txt", "r", encoding="utf-8") as fh:
    requirements = [line.strip() for line in fh if line.strip() and not line.startswith("#")]

setup(
    name="safeway-guardian",
    version="1.0.0",
    author="Nicolas E. Santiago",
    author_email="nicolas.santiago@safeway-guardian.ai",
    description="SAFEWAY GUARDIAN - Advanced Typhoon AI Forecasting System",
    long_description=long_description,
    long_description_content_type="text/markdown",
    url="https://github.com/nicolas-santiago/safeway-guardian-typhoon-ai",
    packages=find_packages(),
    classifiers=[
        "Development Status :: 4 - Beta",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Operating System :: OS Independent",
        "Programming Language :: Python :: 3",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Programming Language :: Python :: 3.10",
        "Topic :: Scientific/Engineering :: Artificial Intelligence",
        "Topic :: Scientific/Engineering :: Atmospheric Science",
    ],
    python_requires=">=3.8",
    install_requires=requirements,
    entry_points={
        "console_scripts": [
            "safeway-guardian=safeway_guardian.cli:main",
        ],
    },
    include_package_data=True,
    package_data={
        "safeway_guardian": ["config/*.yaml", "data/*.json"],
    },
)
